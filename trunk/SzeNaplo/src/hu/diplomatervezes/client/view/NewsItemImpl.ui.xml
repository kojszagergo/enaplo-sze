<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.header {
		font-weight: bold;
		font-size: x-large;
		padding-bottom: 5px;
		border-bottom: 1px solid #eee;
		width: 500px;
	}
	.body {
		padding-top: 10px;
	}
	</ui:style>
	<g:HTMLPanel>
		<div class="{style.header}" ui:field="headerDiv"></div>
		<div class="{style.body}" ui:field="bodyDiv"></div>
	</g:HTMLPanel>
</ui:UiBinder>