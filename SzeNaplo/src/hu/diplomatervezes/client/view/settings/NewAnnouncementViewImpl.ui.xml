<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.newAnnouncementContainer {
		padding-top: 20px;
	}
	.textBoxes {
		border: none!important;
		font-family: Arial;
	}
	.buttons {
		padding-right: 10px;

	}
		
	</ui:style>
	<g:VerticalPanel styleName="style.newAnnouncementContainer">
		<g:Label text="Bejelentés címe"></g:Label>
		<g:TextBox ui:field="title"></g:TextBox>
		<g:Label text="Szöveg"></g:Label>
		<g:RichTextArea ui:field="body"></g:RichTextArea>
		<g:HorizontalPanel>
			<g:PushButton ui:field="saveButton" text="Mentés"></g:PushButton>
			<g:PushButton ui:field="clearButton" text="Törlés"></g:PushButton>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 