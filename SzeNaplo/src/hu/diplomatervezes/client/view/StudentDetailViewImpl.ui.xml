<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.container {
			background-color: #fff;
		}
		
		.nameLabel {
			font-size: 16pt;
			min-width: 220px;
		}
		.sListbox {
			min-width: 150px;
			height: 27px;
			padding: 3px 3px;
		}

	</ui:style>
	
	<g:VerticalPanel styleName="{style.container}">
		<g:HorizontalPanel ui:field="studentDetailHeader">
			<g:Label styleName="{style.nameLabel}" ui:field="nameLabel"></g:Label>
			<g:ListBox styleName="{style.sListbox}" ui:field="subjects"/>
			<g:PushButton text="SETTINGS" styleName="gwt-SettingshButton"/>
		</g:HorizontalPanel>
		
		
		<g:HorizontalPanel>
			<g:VerticalPanel ui:field="studentDetailLeft">
				<g:PushButton text="JEGYBEÍRÁS" ui:field="newButton"/>
				<g:Label text="ÉRDEMJEGYEK"/>
				<g:FlexTable ui:field="studentCredits"/></g:VerticalPanel>
			<g:VerticalPanel ui:field="studentDetailRight"></g:VerticalPanel>
		</g:HorizontalPanel>
		<g:VerticalPanel ui:field="studentDetailFooter">
			<g:FlexTable ui:field="privateData"/></g:VerticalPanel>
	</g:VerticalPanel>
	
</ui:UiBinder> 